<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="Ondestan" metal:use-macro="load: main.pt">

	<div metal:fill-slot="head">
    	<title i18n:translate="simple_viewer_title">Viewer - Ondest√°n</title>
    	<link rel="stylesheet" href="${request.static_url('ondestan:static/styles/leaflet.css')}" />
    	<script type="text/javascript" src="${request.static_url('ondestan:static/js/lib/leaflet.js')}"></script>
		<script type="text/javascript" src="${request.static_url('ondestan:static/js/lib/jquery-1.8.2.min.js')}"></script>
		<script type="text/javascript" src="${request.static_url('ondestan:static/js/lib/leaflet.ajax.min.js')}"></script>
		<script type="text/javascript" src="${request.static_url('ondestan:static/js/simpleViewer.js')}"></script>
		<script type="text/javascript">
	       window.contextVariables = {
	           application_url : "${request.application_url}"
	       };
    	</script>
	</div>
	
	<div metal:fill-slot="content">
	    <span tal:condition="user_id != None">
		  <label i18n:translate="hello">Hello</label><label>, ${user_id}</label> <label tal:condition="can_edit" i18n:translate="editor">Editor</label>  <label tal:condition="is_admin">${new_orders_msg}</label> <a href="${request.application_url}/order/new" tal:condition="not is_admin" i18n:translate="new_order">New order</a>
		  <a href="${request.application_url}/update_profile" i18n:translate="update_profile">Update profile</a> <a href="${request.application_url}/logout" i18n:translate="logout">Logout</a>
		</span>
		<div id="map" style="width: 600px; height: 400px"></div>
	</div>

</html>
