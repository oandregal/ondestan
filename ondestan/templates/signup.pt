<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="Ondestan" metal:use-macro="load: main.pt">

  <div metal:fill-slot="head">
    <title i18n:translate="sign_up_title">Sign Up - Ondestán</title>
    <script type="text/javascript" src="${request.static_url('ondestan:static/js/signup.js')}"></script>
  </div>

  <div metal:fill-slot="styles">
    <link rel="stylesheet"
          href="${request.static_url('ondestan:static/css/login.css')}"
          type="text/css" media="screen" />
  </div>

  <div class="container" metal:fill-slot="content">

    <div class="middle align-right" tal:switch="'form.submitted' in request.params and message == ''">

      <div id="left" class="app-welcome align-left" tal:case="True">
        <b><label i18n:translate="successful_sign_up">Successful Sign Up</label></b>
      </div>

      <div id="left" class="app-welcome align-left" tal:case="False">
        <b><label i18n:translate="sign_up">Sign Up</label></b><br/>
        <span tal:replace="message"/>
      </div>

      <div id="right" class="app-welcome align-right"></div>

    </div>

    <div id="bottom" tal:switch="'form.submitted' in request.params and message == ''">

      <div class="bottom" tal:case="True">
        <label i18n:translate="sign_up_instructions">We have sent you an email with the instructions for activating your new account.<br/>Welcome to Ondestán!!</label>
      </div>

      <div class="bottom" tal:case="False">

        <form role="form" class="form-horizontal" action="${request.route_url('signup')}" method="post">

          <div class="form-group">
            <label for="login" class="col-sm-4 control-label" i18n:translate="username">Login</label>
            <div class="col-sm-8">
              <input class="form-control" type="text" id="login" name="login" value="${login}" onkeyup="checkFields()"/>
            </div>
          </div>

          <div class="form-group">
            <label for="name" class="col-sm-4 control-label" i18n:translate="name">Name</label>
            <div class="col-sm-8">
              <input class="form-control" type="text" id="name" name="name" value="${name}" onkeyup="checkFields()"/>
            </div>
          </div>

          <div class="form-group">
            <label for="email" class="col-sm-4 control-label" i18n:translate="email">Email</label>
            <div class="col-sm-8">
              <input class="form-control" type="text" id="email" name="email" value="${email}" onkeyup="checkFields()" />
            </div>
          </div>

          <div class="form-group">
            <label for="phone" class="col-sm-4 control-label" i18n:translate="cell_phone_number">Cell phone number</label>
            <div class="col-sm-8">
              <input class="form-control" type="text" id="phone" name="phone" value="${phone}"/>
            </div>
          </div>

          <div class="form-group">
            <label id="passtooshort" style="display: none;" i18n:translate="password_too_short">Password must be at least 6 chars</label><label id="passdistinct" style="display: none;" i18n:translate="passwords_dont_match">Passwords don't match</label>
            <label for="password1" class="col-sm-4 control-label" i18n:translate="password">Password</label>
            <div class="col-sm-8">
              <input class="form-control" type="password" id="password1" name="password" onkeyup="checkFields()"/>
            </div>
          </div>

          <div class="form-group">
            <label for="password2" class="col-sm-4 control-label" i18n:translate="retype_password">Retype password</label>
            <div class="col-sm-8">
              <input class="form-control" type="password" id="password2" onkeyup="checkFields()"/>
            </div>
          </div>

          <button disabled="disabled" id="submit" class="btn btn-lg col-sm-8 col-sm-offset-4 btn-primary" type="submit" name="form.submitted" i18n:translate="sign_up" value="Sign Up"></button>

        </form>

      </div>

    </div>

  </div>

</html>
