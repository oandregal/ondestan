<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="Ondestan" metal:use-macro="load: main.pt">

  <div metal:fill-slot="head">
    <title i18n:translate="update_profile_title">Update profile - Ondestán</title>
  </div>

  <div metal:fill-slot="styles">
    <link rel="stylesheet" href="${request.static_url('ondestan:static/css/main.css')}" />
  </div>

  <div class="container" metal:fill-slot="content">

    <div class="header">
      <ul class="nav navbar-nav pull-right">
        <li class="dropdown active">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">${user_id} <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href="${request.route_url('update_profile')}" i18n:translate="update_profile">Update profile</a></li>
            <li><a href="${request.route_url('logout')}" i18n:translate="logout">Logout</a></li>
          </ul>
        </li>
      </ul>
      <h3 class="text-muted"><a href="/map">Onde Están</a></h3>
    </div>

    <div id="middle">
      <div class="middle align-right">
        <div id="left" class="app-welcome align-left">
          <h4 i18n:translate="update_profile">Update Profile</h4>
          <span tal:replace="message"/>
        </div>
        <div id="right" class="app-welcome align-right"></div>
      </div>
    </div>

    <div id="bottom">
      <div class="bottom">

        <form class="form-horizontal" role="form" action="${request.route_url('update_profile')}" method="post">
          <input type="hidden" id="id" name="id" value="${id}"></input>
          <div class="form-group">
            <label for="login" class="col-sm-4 control-label" i18n:translate="username">Login</label>
            <div class="col-sm-6">
              <input type="text" class="form-control" id="login" name="login" value="${login}" onkeyup="checkFields()"/>
            </div>
          </div>
          <div class="form-group">
            <label for="name" class="col-sm-4 control-label" i18n:translate="name">Name</label>
            <div class="col-sm-6">
              <input type="text" class="form-control" id="name" name="name" value="${name}" onkeyup="checkFields()"/>
            </div>
          </div>
          <div class="form-group">
            <label for="email" class="col-sm-4 control-label" i18n:translate="email">Email</label>
            <div class="col-sm-6">
              <input type="text" class="form-control" id="email" name="email" value="${email}" onkeyup="checkFields()"/>
            </div>
          </div>
          <div class="form-group">
            <label for="phone" class="col-sm-4 control-label" i18n:translate="cell_phone_number">Cell phone number</label>
            <div class="col-sm-6">
              <input type="text" class="form-control" id="phone" name="phone" value="${phone}"/>
            </div>
          </div>
          <div class="form-group">
            <label id="passtooshort" style="display: none;" i18n:translate="password_too_short">Password must be at least 6 chars</label>
            <label id="passdistinct" style="display: none;" i18n:translate="passwords_dont_match">Passwords don't match</label>
            <label for="password1" class="col-sm-4 control-label" i18n:translate="password">Password</label>
            <div class="col-sm-6">
              <input type="password" class="form-control" id="password1" name="password" onkeyup="checkFields()"/>
            </div>
          </div>
          <div class="form-group">
            <label for="password2" class="col-sm-4 control-label" i18n:translate="retype_password">Retype password</label>
            <div class="col-sm-6">
              <input type="password" class="form-control" id="password2" onkeyup="checkFields()"/>
            </div>
          </div>
          <button class="btn btn-primary col-sm-offset-8" disabled="disabled" id="submit" type="submit" name="form.submitted" i18n:attributes="value update_profile" value="Update Profile">Update profile</button>
        </form>

      </div>
    </div>
  </div>

  <div metal:fill-slot="javascript">
    <script type="text/javascript" src="${request.static_url('ondestan:static/js/lib/jquery-1.8.2.min.js')}"></script>
    <script type="text/javascript" src="${request.static_url('ondestan:static/bootstrap-3.1.1-dist/js/bootstrap.js')}"></script>
    <script type="text/javascript" src="${request.static_url('ondestan:static/js/signup.js')}"></script>
  </div>

</html>
