<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="Ondestan" metal:use-macro="load: main.pt">

  <div metal:fill-slot="head">
    <title i18n:translate="login_title">Login - Ondest√°n</title>
  </div>

  <div metal:fill-slot="content">
    <div id="middle">
      <div class="middle align-right">
        <div id="left" class="app-welcome align-left">
          <b><label i18n:translate="login">Login</label></b><br/>
          <span tal:replace="message"/>
        </div>
        <div id="right" class="app-welcome align-right"></div>
      </div>
    </div>
    <div id="bottom">
      <div class="bottom">
        <form action="${request.route_url('login')}" method="post">
          <input type="hidden" name="came_from" value="${came_from}"/>
          <table>
            <tr><td align="right" style="padding-right:10px"><label><label i18n:translate="username">Username</label>:</label></td><td colspan="2"><input type="text" name="login" value="${login}"/></td></tr>
            <tr><td align="right" style="padding-right:10px"><label><label i18n:translate="password">Password</label>:</label></td><td colspan="2"><input type="password" name="password"/></td></tr>
            <tr><td/><td align="left"><input type="submit" name="form.submitted" i18n:attributes="value log_in" value="Log in"/></td><td align="right"><a href="/signup"><label i18n:translate="sign_up">Sign Up</label></a></td></tr>
          </table>
        </form>
        <div>
          <a href="/reminder"><label i18n:translate="forgot_user_password">Forgot your user/password?</label></a>
        </div>
      </div>
    </div>
  </div>

</html>
