<VirtualHost:80>

       # Use only 1 Python sub-interpreter.  Multiple sub-interpreters
       # play badly with C extensions. See:
       # http://stackoverflow.com/a/10558360/209039
       WSGIApplicationGroup %{GLOBAL}
       WSGIPassAuthorization On
       WSGIDaemonProcess oe-pyramid user=www-data group=www-data threads=4 \
                          python-path=/var/www/oe/lib/python2.7/site-packages
       WSGIScriptAlias /oe /var/www/oe/app/app.wsgi

        Alias /oe/static /var/www/oe/static

        <Directory /var/www/oe/app>
                 WSGIProcessGroup oe-pyramid
                 Order allow,deny
                 Allow from all
        </Directory>

        <Directory /var/www/oe-repo>
                Options FollowSymLinks
                AllowOverride None
        </Directory>

        <Directory /var/www/oe>
                Options FollowSymLinks
                AllowOverride None
        </Directory>

</VirtualHost>